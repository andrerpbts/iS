<%= simple_form_for course, html: {class: 'form-vertical' } do |f| %>
  <div class="form-group">
    <%= f.input :name %>
  </div>

  <div class="form-group">
    <%= f.input :description, as: :text %>
  </div>

  <div class="form-group">
    <%= f.input :status,
                collection: Course.status.options,
                include_blank: false %>
  </div>
  <br />

  <%= f.submit class: "btn btn-primary"  %>
<% end %>
