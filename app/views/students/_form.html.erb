<%= simple_form_for student, html: {class: 'form-vertical' } do |f| %>
  <div class="form-group">
    <%= f.input :name %>
  </div>

  <div class="form-group">
    <%= f.input :register_number %>
  </div>

  <div class="form-group">
    <%= f.input :status,
                collection: Student.status.options,
                include_blank: false %>
  </div>
  <br />
  <%= f.submit class: "btn btn-primary" %>
<% end %>
